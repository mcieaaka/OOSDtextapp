<%- include ('./partials/header.ejs') %>
<div>
    <div class="headbar">
        <h3>EZ Chat App</h3>
    </div>
    <div class="logindiv">
        <h2>Your Details</h2>

        <br>
        <br>
        <form action="/signup" method="post">
            <table>
                <tr>
                    <td>Name:</td>
                    <td><input class="auth-ip" type="text" name="username"></td>
                </tr>
                <tr>
                    <td>Password:</td>
                    <td><input class="auth-ip" type="password" name="password"></td>
                </tr>
                <tr>
                    <td>Email:</td>
                    <td><input class="auth-ip" type="email" name="email"></td>
                </tr>
                <tr>
                    <td>Image:</td>
                    <td><input class="auth-ip" type="text" name="picture"></td>
                </tr>
            </table>
            <p style="text-align: center;"><input class="btn btn-primary loginbt" type="submit"></p>
        </form>
    </div>
</div>
<%- include ('./partials/footer.ejs') %>